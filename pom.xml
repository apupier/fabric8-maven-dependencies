<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.fabric8.maven</groupId>
  <artifactId>fabric8-maven-dependencies</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <name>Fabric8 Maven Dependencies</name>

  <prerequisites>
    <maven>3.0.3</maven>
  </prerequisites>

  <!--

  NOTE all properties contained in this pom, when changed will ripple through all configured fabric8 projects

  see release.groovy for a list of the complete projects affected

  We can omit some versions like these which get auto-PR'd anyway:

    fabric8.version
    fabric8.maven.plugin.version
  -->

  <properties>
    <camel.version>2.17.2</camel.version>
    <spring-boot.version>1.3.5.RELEASE</spring-boot.version>

    <!-- maven plugins -->
    <maven-compiler-plugin.version>3.3</maven-compiler-plugin.version>
    <maven-surefire-plugin.version>2.18.1</maven-surefire-plugin.version>
  </properties>
</project>
